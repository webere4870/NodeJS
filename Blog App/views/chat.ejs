<div id="messageList">
    <!-- <div id="messageSearch" class="rowFlex">
        <input type="text" placeholder="Search">
        <i class="bi bi-search"></i>
    </div> -->
    <div style="display: flex; justify-content: center; padding: 10px; border-bottom: 1px solid gray; position: relative;">
        <input type="search" id="search" name="search" placeholder="Search">
        <button id="messageSearchBtn" class="colFlex hoverable"><i class="bi bi-search" style="font-size: 1rem;"></i></button>
        <div id="dropBox" class="messageQuery">
        <div class="colFlex" style="justify-content: flex-start; align-items: flex-start;">
        </div>
        <div class="closeBtn" style="right: 15px;">
            <i class="far fa-times-circle"></i>
        </div>
    </div>
    </div>
    
    <% for(let counter = 0; counter < messages.length; counter++) { %>
        <div class="messageThread hoverable">
            <img class="profilePicture1" src='data:<%= messages[counter].mimetype %>;base64,<%= messages[counter].b64%>'/>
            <h2 class="usernameSelector"><%= messages[counter].otherUsername %></h2> 
        </div>
    <% } %>  
</div>
<div id="chatBox">
    
</div>
<div id="bottomChatBox">
    <textarea name="" id="messageBox" cols="30" rows="10" placeholder="Type a message..."></textarea>
    <button class="submitBtn hoverable" style="margin-top: 10px;" id="messageBtn">Send</button>
</div>
<%- include('./logout') %> 